{
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "plugin:json/recommended"],
  "rules": {
    "prettier/prettier": [
        "warn",
        {
            "singleQuote": true
        }
    ],
    "no-unused-vars": [
        "warn",
        {
            "argsIgnorePattern": "^_"
        }
    ],
    "quotes": [2, "single", { "avoidEscape": true }]
  },
  "reportUnusedDisableDirectives": true,
  "ignorePatterns": ["grammar.js", "test.js"]
}
